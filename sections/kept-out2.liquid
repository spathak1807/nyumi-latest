<div class="strikewords2" id="pdp_kept" style="display: block;">
  <p>{{ section.settings.description }}</p>
  {% if section.settings.title != blank %}
  <div class="strikewords_title">      
    {{ section.settings.title }}
  </div>
  {% endif %}
  <ul class="strikeout2">
    {% for block in section.blocks %}
    <li>
      {% if block.settings.flavour != blank %}
      <span class="inner">
        {{block.settings.flavour}}
      </span>
      {% endif %}
    </li>
    {% endfor %}      
  </ul>
</div>
{% schema %}
  {
    "name": "Kept Out For Good2",
    "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "we keep out:"
        } ,
        {
          "type": "text",
          "id": "description",
          "label": "Description",
          "default": "We have zero tolerance for unnecessary or harmful ingredients"
        }
	],
    "blocks":[
           {
            "type":"flavour",
            "name":"Flavour",
            "settings":[
                {
                  "type":"text",
                  "id":"flavour",
                  "label":"Flavour title",
                  "default":"gelatin"
                }
            ]
          }
        ]
  }
{% endschema %}
